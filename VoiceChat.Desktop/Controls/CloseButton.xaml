<UserControl x:Class="VoiceChat.Desktop.Controls.CloseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoiceChat.Desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="24">
    <Grid Name="Grid" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" Width="24" Height="24">
        <local:IconButton Icon="Close"/>
        <Rectangle Name="Rect" MouseLeftButtonDown="CloseApp">
            <Rectangle.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=Grid}" Value="True">
                            <Setter Property="Rectangle.Fill" Value="Red" />
                            <Setter Property="Rectangle.Opacity" Value="0.5" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>
    </Grid>
</UserControl>
