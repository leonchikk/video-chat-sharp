<Window x:Class="VoiceChat.Desktop.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoiceChat.Desktop.Views"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Background="#36393f"
        Title="SplashScreen" Height="200" Width="400">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard Duration="00:00:1" Storyboard.TargetProperty="Opacity">
                    <DoubleAnimation From="0.5" To="1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <Label Content="MadJuns" Foreground="White" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="v0.01" Foreground="White" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="352,164,0,0"/>
    </Grid>
</Window>
